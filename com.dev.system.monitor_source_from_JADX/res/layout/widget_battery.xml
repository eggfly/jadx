<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="1" android:background="@color/app_background" android:layout_width="-1" android:layout_height="-2">
    <TextView android:textColor="@color/white" android:gravity="11" android:background="#318ce7" android:layout_width="-1" android:layout_height="20dp" android:text="Battery" />
    <LinearLayout android:orientation="0" android:layout_width="-1" android:layout_height="-2"
        <LinearLayout android:orientation="1" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="10dp" android:layout_marginTop="15dp">
            <TextView android:textColor="@color/black" android:id="@id/widget_battery_source" android:layout_width="-2" android:layout_height="-2" />
            <TextView android:textColor="@color/black" android:id="@id/widget_battery_type" android:layout_width="-2" android:layout_height="-2" />
            <TextView android:textColor="@color/black" android:id="@id/widget_battery_temperature" android:layout_width="-2" android:layout_height="-2" />
            <TextView android:textColor="@color/black" android:id="@id/widget_battery_voltage" android:layout_width="-2" android:layout_height="-2" />
            <TextView android:textColor="@color/black" android:id="@id/widget_battery_health" android:layout_width="-2" android:layout_height="-2" />
        </LinearLayout>
        <RelativeLayout android:layout_width="-1" android:layout_height="-2">
            <ImageView android:id="@id/widget_battery_graph" android:layout_width="150dp" android:layout_height="150dp" android:layout_marginTop="5dp" android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
